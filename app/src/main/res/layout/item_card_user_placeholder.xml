<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_5sdp"
    android:padding="@dimen/_4sdp">

    <View
        android:id="@+id/viewSupporterPh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/viewBackgroundPh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_item_2"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/viewSupporterPh"
        app:layout_constraintTop_toTopOf="@+id/ivItemThumbnailPh" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivItemThumbnailPh"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@color/colorPrimaryGrey40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_6sdp"
        app:riv_mutate_background="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tvItemTitlePh"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@color/colorPrimaryGrey40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivItemThumbnailPh"
        app:layout_constraintTop_toTopOf="@+id/viewBackgroundPh"
        app:riv_corner_radius="@dimen/_4sdp"
        app:riv_mutate_background="true"
        tools:text="@string/text_lorem_ipsum_title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tvItemTitlePh2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/colorPrimaryGrey40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivItemThumbnailPh"
        app:layout_constraintTop_toBottomOf="@+id/tvItemTitlePh"
        app:riv_corner_radius="@dimen/_4sdp"
        app:riv_mutate_background="true"
        tools:text="@string/text_lorem_ipsum_title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tvUrlPh"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/colorPrimaryGrey40"
        app:layout_constraintBottom_toTopOf="@+id/viewSupporterPh"
        app:layout_constraintEnd_toEndOf="@id/viewBackgroundPh"
        app:layout_constraintStart_toStartOf="@id/viewBackgroundPh"
        app:layout_constraintTop_toBottomOf="@id/ivItemThumbnailPh"
        app:riv_corner_radius="@dimen/_4sdp"
        app:riv_mutate_background="true"
        tools:text="@string/text_lorem_ipsum_description" />

</androidx.constraintlayout.widget.ConstraintLayout>