<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorTextWhite100</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Header.H1" parent="Header" tools:keep="@style/Header_H1">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="Header.H2" parent="Header" tools:keep="@style/Header_H2">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="Header.H3" parent="Header">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Header.H4" parent="Header">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Header.H5" parent="Header">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorTextBlack100</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.Title.Light" parent="Text.Title">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Subtitle" parent="Text">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Rounded</item>
        <item name="android:background">@drawable/bg_layout_favourite</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded" parent="">
        <item name="cornerSize">@dimen/_12sdp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>